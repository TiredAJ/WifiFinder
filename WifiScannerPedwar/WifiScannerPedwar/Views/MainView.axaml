<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:WifiScannerPedwar.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="WifiScannerPedwar.Views.MainView"
             x:DataType="vm:MainViewModel">
	<DockPanel>
			<DataGrid x:Name="DGRD_APData" Margin="15" ItemsSource="{Binding WifiList.Items, Mode=OneWay}"
					  AutoGenerateColumns="False" GridLinesVisibility="All" BorderThickness="2"
					  IsReadOnly="True" VerticalScrollBarVisibility="Visible" 
					  HorizontalScrollBarVisibility="Visible"
					  DockPanel.Dock="Top">
				<DataGrid.Columns>
					<DataGridTextColumn Header="BSSID" Binding="{Binding BSSID}"/>
					<DataGridTextColumn Header="SSID" Binding="{Binding SSID}"/>
					<DataGridTextColumn Header="RSSI" Binding="{Binding RSSI}"/>
					<DataGridTextColumn Header="Capabilities" Binding="{Binding Capabilities}"/>
					<DataGridTextColumn Header="LastUpdated" Binding="{Binding LastUpdated}"/>
				</DataGrid.Columns>
			</DataGrid>		
	</DockPanel>
</UserControl>
