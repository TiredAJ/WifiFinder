<UserControl
    x:Class="WifiScannerPedwar.Views.MainView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:WifiScannerPedwar.ViewModels"
    d:DesignHeight="3200"
    d:DesignWidth="1440"
    x:DataType="vm:MainViewModel"
    mc:Ignorable="d">

    <UserControl.Styles>
        <Style Selector="TextBlock">
            <Setter Property="TextAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="20" />
        </Style>
    </UserControl.Styles>


    <DockPanel>
        <Separator
            Height="150"
            Background="Transparent"
            DockPanel.Dock="Top" />

        <TextBlock
            Margin="10"
            DockPanel.Dock="Top"
            TextWrapping="WrapWithOverflow">
            My favourite part was when the scanner said<LineBreak />
            "It's scannin' time" and scanned all over the place</TextBlock>

        <Button Margin="40" DockPanel.Dock="Bottom">
            <TextBlock>Collect data!</TextBlock>
            <Button.Styles>
                <Style Selector="Button">
                    <Setter Property="HorizontalAlignment" Value="Center" />
                    <Setter Property="MinWidth" Value="200" />
                    <Setter Property="MinHeight" Value="50" />

                </Style>
            </Button.Styles>
        </Button>
    </DockPanel>

</UserControl>
